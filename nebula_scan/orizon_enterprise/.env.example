# Orizon Enterprise Environment Configuration
# Copy this file to .env and update with your settings

# ===================
# Application Settings
# ===================
ENVIRONMENT=development
DEBUG=true
APP_NAME="Orizon Enterprise"
APP_VERSION="2.0.0"
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# ===================
# Security Settings
# ===================
SECRET_KEY=change-me-in-production-super-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================
# Database Settings
# ===================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=orizon
POSTGRES_PASSWORD=orizon_secure_password_change_me
POSTGRES_DB=orizon_enterprise
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# ===================
# Redis Settings
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_TTL=3600

# ===================
# Celery Settings
# ===================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_WORKER_CONCURRENCY=10
CELERY_TASK_TIME_LIMIT=3600

# ===================
# Scanning Settings
# ===================
MAX_CONCURRENT_SCANS=100
DNS_TIMEOUT=5
HTTP_TIMEOUT=10
PORT_SCAN_TIMEOUT=5
MAX_RETRIES=3
REQUESTS_PER_SECOND=50

# Advanced Features
ENABLE_SCREENSHOTS=true
ENABLE_VULNERABILITY_SCAN=true
ENABLE_TECH_DETECTION=true
ENABLE_WAF_DETECTION=true
ENABLE_SSL_ANALYSIS=true

# ===================
# API Keys (Optional)
# ===================
# VirusTotal
VIRUSTOTAL_API_KEY=

# SecurityTrails
SECURITYTRAILS_API_KEY=

# Censys
CENSYS_ID=
CENSYS_SECRET=

# Shodan
SHODAN_API_KEY=

# Hunter.io (Email verification)
HUNTER_IO_API_KEY=

# GeoIP
GEOIP_LICENSE_KEY=

# WhoisXML
WHOISXML_API_KEY=

# ===================
# Monitoring Settings
# ===================
ENABLE_PROMETHEUS=true
ENABLE_SENTRY=false
SENTRY_DSN=
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_PORT=9090

# ===================
# Storage Settings
# ===================
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./storage

# AWS S3 (if using S3 storage)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ===================
# Notification Settings
# ===================
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Email Settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Slack
SLACK_WEBHOOK_URL=

# Discord
DISCORD_WEBHOOK_URL=

# ===================
# Flower Settings (Celery UI)
# ===================
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# ===================
# Grafana Settings
# ===================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
